<div class="h-75 d-flex justify-content-center   bg-body-secondary align-items-center">
  <div class="position-relative w-100 d-flex justify-content-center">
    <div class="position-absolute z-1  " style="top: -50px;;">
      <input type="text" placeholder="search">
      <button>create User</button>
    </div>
    <table class="table table-bordered w-75 mx-auto table-hover position-relative">
      <thead class="table-dark">
      <th>User name</th>
      <th>Email</th>
      <th>Edit</th>
    </thead>
    <% if(userData.length>0){ %> <% userData.forEach(data=>{%>
    <tr>
      <td>
        <p class="mt-4"><%= data.username %></p>
      </td>
      <td>
        <p class="mt-4"><%= data.email %></p>
      </td>
      <td style="width: 20%">
        <!-- <a href="/admin/updateuser/<%= data._id %>" class=""> -->
        <a href="/admin/editUser/<%= data._id %>">
          <button class="btn btn-warning">edit</button>
        </a>
        <!-- </a> -->
        <!-- <a href="/admin/deleteuser/<%= data._id %>" onclick="return confirm('Are you want to delete <%=data.Name%> ?')" class="danger"> -->
          <a href="/admin/deleteUser/<%= data._id %>" onclick="return confirm('Are you want to delete <%= data.username %> ?')">
            <button class="btn btn-danger">delete</button>
          </a>
        </a>
      </td>
    </tr>
    <% }) %> <% } else { %>
    <tr>
      <td colspan="3" class="text-center">
        <p class="mt-3">No users</p>
      </td>
    </tr>
    <% } %>
  </table>
</div>
</div>
