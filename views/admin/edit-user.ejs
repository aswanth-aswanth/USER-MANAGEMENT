<%- include('../partials/top.ejs') %>
<div class="login_container py-5 vh-100 bg-body-secondary d-flex justify-content-center align-items-center">
  <form action="/admin/editSubmit/<%= user._id %>" method="post" class="border border-2 shadow-sm bg-white d-flex  flex-column rounded-4 p-4" style="min-width: 380px">
    <h3 class="text-center my-5">Edit User</h3>
    <p class="text-center text-warning"></p>
    <label class="text-primary mb-2 " for="username"
      >Username
    </label>
    <input class="rounded-2 border mb-4  py-2 ps-2 text-center" id="username" value="<%= user.username %>" for="username" name="username" type="text" placeholder="Enter username" />
    <label class="text-primary mb-2" for="email">Email Id</label>
    <input class="rounded-2 border mb-4  py-2 ps-2 text-center" id="email" value="<%= user.email %>" name="email" value="" type="email" placeholder="Enter email" />
    <button class="border-0 my-5 text-white py-2 px-5 bg-primary  rounded-4" type="submit">Submit</button>
  </form>
</div>
<%- include('../partials/bottom.ejs') %>
