<%- include('../partials/top.ejs') %>
    <div class="login_container py-5 vh-100  bg-body-secondary  d-flex justify-content-center align-items-center ">
        <form action="/admin/login" method="post"  class="border border-2 shadow-sm bg-white d-flex gap-5  flex-column  rounded-4 p-4 " style="min-width: 380px;">
            <h3 class="text-center mt-5 ">Login ( admin )</h3>
            <p class="text-center text-warning" > 
                <% if(locals.message){ %>
                    <%= message %>
                <% } %>
            </p>
            <input class="rounded-2 border py-2 ps-2 " name="email" type="email" placeholder="Enter your email">
            <input class="rounded-2 border py-2 ps-2 " name="password" type="password" placeholder="Enter your password">
            <button class="border-0 mb-5 text-white py-2 px-5 bg-danger  rounded-4 " type="submit">Login</button>
        </form>
    </div>
<%- include('../partials/bottom.ejs') %>

